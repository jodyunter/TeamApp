@page "/playoffs"
@inherits PlayoffsBase
@using TeamApp.ViewModels.Views.Competition.Playoff;

@if (model != null)
{
    <div class="playoff">
        @foreach (var round in model.Rounds)
        {
            <div class="round">
                <div class="roundName">@round.Name</div>
                @foreach (var series in round.Series)
                {
                    <div class="matchup">
                        <div class="teamScore">
                            <div class="team">@series.HomeTeamNickName</div>
                            <div class="score">@series.HomeWins</div>
                        </div>
                        <div class="teamScore">
                            <div class="team">@series.AwayTeamNickName</div>
                            <div class="score">@series.AwayWins</div>
                        </div>
                    </div>
                }
            </div>
        }

    </div> 
}

