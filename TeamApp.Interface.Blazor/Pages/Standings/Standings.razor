@page "/standings"
@inherits StandingsCode

<h3>@model.StandingsName</h3>

<BSTable Class="standings-table" IsStriped="true" IsSmall="true">
    <thead>
        <tr>
            <th scope="col">Div</th>
            <th scope="col">R</th>
            <th scope="col">Name</th>
            <th scope="col">W</th>
            <th scope="col">L</th>
            <th scope="col">T</th>
            <th scope="col">Pts</th>
            <th scope="col">GP</th>
            <th scope="col">GF</th>
            <th scope="col">GA</th>
            <th scope="col">GD</th>
            <th scope="col">Sk</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var row in model.Teams)
        {
        <tr class="standings-row">
            <td>@row.Division</td>
            <td>@row.Rank</td>
            <td>@(row.TeamName + " " + row.TeamNickName)</td>
            <td>@row.Wins</td>
            <td>@row.Loses</td>
            <td>@row.Ties</td>
            <td>@row.Points</td>
            <td>@row.GamesPlayed</td>
            <td>@row.GoalsFor</td>
            <td>@row.GoalsAgainst</td>
            <td>@row.GoalDifference</td>
            <td>@row.Skill</td>

        </tr>
            
        }
    </tbody>
</BSTable>    


